    </section>

    <!-- ğŸŒ— Theme Toggle -->
    <button id="themeToggle" aria-label="Toggle theme" class="fixed bottom-6 right-6 z-50 bg-white dark:bg-zinc-800 border border-gray-300 dark:border-zinc-700 p-3 rounded-full shadow-lg hover:scale-105 transition duration-300">
      <span id="themeIcon">ğŸŒ™</span>
    </button>

    <script>
      const btn = document.getElementById('themeToggle');
      const icon = document.getElementById('themeIcon');
      const html = document.documentElement;

      if (localStorage.theme === 'dark') {
        html.classList.add('dark');
      } else {
        html.classList.remove('dark');
      }

      btn.addEventListener('click', () => {
        const isDark = html.classList.toggle('dark');
        localStorage.theme = isDark ? 'dark' : 'light';
        icon.textContent = isDark ? 'ğŸŒ™' : 'â˜€ï¸';
      });

      icon.textContent = html.classList.contains('dark') ? 'ğŸŒ™' : 'â˜€ï¸';
    </script>

